{
  "name": "fastify-template",
  "version": "1.0.0",
  "description": "A modern Fastify TypeScript backend template with TypeBox validation, Drizzle ORM, built-in security plugins, and RESTful API design following GitHub API conventions.",
  "main": "app.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && c8 node --test --import tsx \"test/**/*.ts\"",
    "test:dev": "c8 node --test --import tsx \"test/**/*.ts\"",
    "test:watch": "node --test --import tsx --watch \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -o dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -o dist/app.js",
    "lint": "eslint --ignore-pattern=dist",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier . --list-different",
    "format-fix": "prettier . --write",
    "db:create": "tsx --env-file=.env ./scripts/create-database.ts",
    "db:init": "tsx --env-file=.env ./scripts/init-tables.ts",
    "db:migrate": "tsx --env-file=.env ./scripts/migrate-database.ts",
    "db:seed": "tsx --env-file=.env ./scripts/seed-database.ts"
  },
  "keywords": [
    "fastify",
    "typescript",
    "template",
    "boilerplate",
    "backend",
    "api",
    "rest",
    "restful",
    "typebox",
    "drizzle",
    "drizzle-orm",
    "mysql",
    "validation",
    "security",
    "cors",
    "helmet",
    "rate-limit"
  ],
  "author": "Pony",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@sinclair/typebox": "^0.34.48",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "fastify-cli": "^7.4.1",
    "fastify-favicon": "^5.0.0",
    "fastify-ip": "^2.0.0",
    "fastify-plugin": "^5.1.0",
    "mysql2": "^3.16.3",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "c8": "^10.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fastify-tsconfig": "^3.0.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3"
  }
}

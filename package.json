{
  "name": "fastify-template",
  "version": "0.0.1",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && c8 node --test --import tsx \"test/**/*.ts\"",
    "test:dev": "c8 node --test --import tsx \"test/**/*.ts\"",
    "test:watch": "node --test --import tsx --watch \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -o dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -o dist/app.js",
    "lint": "eslint --ignore-pattern=dist",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier . --list-different",
    "format-fix": "prettier . --write",
    "db:create": "tsx --env-file=.env ./scripts/create-database.ts",
    "db:init": "tsx --env-file=.env ./scripts/init-tables.ts",
    "db:migrate": "tsx --env-file=.env ./scripts/migrate-database.ts",
    "db:seed": "tsx --env-file=.env ./scripts/seed-database.ts"
  },
  "keywords": [],
  "author": "Pony",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@sinclair/typebox": "^0.34.41",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.6.2",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "mysql2": "^3.15.3",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@types/node": "^22.1.0",
    "c8": "^10.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.30.0",
    "fastify-tsconfig": "^3.0.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3"
  }
}
